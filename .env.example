# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Environment
NODE_ENV=development

# Security Configuration
# Options: MAXIMUM, HIGH, MEDIUM, LOW
# MAXIMUM = No anonymous access (recommended for production)
# HIGH = Limited guest access for surveys
# MEDIUM = Some public features with security controls
# LOW = Maximum flexibility (development only)
VITE_SECURITY_LEVEL=MAXIMUM

# Feature Flags
VITE_USE_DB_SENTIMENT=true

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Configure credentials as Supabase secrets for production
# 4. Never commit .env file to version control